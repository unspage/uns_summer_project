<html>

<head>
    <title>gallery</title>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    
    <!-- Custom styles for this template -->
    <link href="/css/mycss.css" rel="stylesheet" type="text/css">
    <link href="/css/index.css" rel="stylesheet" type="text/css">

    <script src="js/images.min.js"></script>
    <script src="/js/index.js"></script>
</head>

<body onload="resizeAllGridItems()">
    <!-- Page Content -->
    <div class="container">
    
        <header><% include ./header %></header>
        <hr> 
        
        <!-- 내가 쓴 게시글 출력 -->
        <h3 class="font-weight-light text-center text-lg-left mt-4 mb-0">
            Posts of <span style="color: #000000"><b><%= writer %></b></span>
        </h3><br>

        <div class="row text-center text-lg-left">
            <% post.forEach(function(item) { %>
            <div class="image_card col-lg-3 col-md-4 col-6">
                <a href="/post/<%= item.idx%>" class="post_img d-block mb-4 h-100">
                    <img class="img-fluid img-thumbnail" src="/<%= item.img_path %>" alt="">
                </a>
            </div>
            <% }); %>
        </div>
        <hr>

        <!-- 좋아요 표시한 게시글 -->
        <h3 class="font-weight-light text-center text-lg-left mt-4 mb-0">
            Posts marked <span style="color: #ff3535">Like</span>
        </h3><br>
        <div class="row text-center text-lg-left">
            <% liked.forEach(function(item) { %>
            <div class="image_card col-lg-3 col-md-4 col-6">
                <a href="/post/<%= item.idx%>" class="post_img d-block mb-4 h-100">
                    <img class="img-fluid img-thumbnail" src="/<%= item.img_path %>" alt="">
                </a>
            </div>
            <% }); %>
        </div>
        <hr>

    </div>
    <!-- /.container -->
    
</body>
</html>