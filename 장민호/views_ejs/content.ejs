<!doctype html>
<html>
<head>
  <title>BOARD</title>
  <link rel="stylesheet" type="text/css" href="/css/writing_style.css">
  <meta charset="utf-8">
</head>

<body>
    <h1>글</h1>

    <table class="edit" align="center"> 
      <tr>
        <td class="col_title">제목</td>
        <td style="padding-left: 10px; border: 7px solid white"><%= data.title %></td>
      </tr>
      <tr>
        <td class="col_writer">글쓴이</td>
        <td style="padding-left: 10px; border: 7px solid white"><%= data.writer %></td>
      </tr>
      <tr>
        <td class="content" colspan="2"> 
          <textarea readonly="readonly" cols="100" rows="12" style="padding: 10px"><%= data.content; %></textarea>
        </td>
      </tr>
      <tr>
        <td colspan="2" style="text-align: right; padding-right: 20px; padding-bottom: 10px;">
          <% if (me === data.writer) { %>
            <button onclick="location.href='/board/content/update/form?idx=<%= data.idx %>'">수정</button>
            <button onclick="location.href='/board/content/delete?idx=<%= data.idx %>'">삭제</button>
          <% }; %>  
          <button onclick="location.href='/board'">목록</button>
        </td>
      </tr>
    </table>
</body>
</html>
