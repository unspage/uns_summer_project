extends layout

mixin message(opp, name)
    if(opp)
        h1.greeting welcome board
            span=name     

append links 
     
    li(style="float: right;")
        a(href="/logout") Logout 
    
block content
    .dashboard 
        .user 
            +message(opp, name)
    .infowrite-panel
        li(style="float: left;")
            a(href="/expense") 지출내역
        li(style="float: left;")
            a(href="/import") 수입내역
        li(style="float: left;")
            a(href="/mypage") 월별통계
    .register-panel
        include includes/expense-list


        

append links 
    li(style="float: right;")
        a(href="/mypage") 정보수정
