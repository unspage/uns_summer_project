extends layout

mixin message(opp, name)
    if(opp)
        h1.greeting welcome board
            span=name 

append links 
    li(style="float: right;")
        a(href="/logout") Logout 
    li(style="float: right;")
        a(href="/mypage") 정보수정
block content
    .dashboard 
        .user 
            +message(opp, name)
    .infowrite-panel 
        img(src="img/infowrite-img.jpg" width="120" style="float: left;")
        include includes/infowrite-form
    .infowrite-panel
        img(src="img/save.jpeg" width="150" style="float: left;")
        include includes/plusinfowrite-form